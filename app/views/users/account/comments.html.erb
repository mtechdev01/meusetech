<div class="row">
  <div class="col-sm-12">
    <div id="user-block_title">
      <h1>Mes commentaires</h1>
    </div>
    <div class="block" id="user-block_content">
      <div class="block-content">
        <table class="table table-hovered">
          <thead>
            <tr>
              <th>
                Article
              </th>
              <th>
                Date
              </th>
              <th>
                Contenu
              </th>
              <th>
                Actions
              </th>
            </tr>
          </thead>
          <tbody>
            <% @comments.each do | comment |  %>
              <tr>
                <td>
                  <% if ( comment.blog_article ) %>
                    <%= link_to comment.blog_article.title, blogShow_url(comment.blog_article.id) %>
                  <% else %>
                    <%= link_to comment.project.name, projectsShow_url(comment.project.id) %>
                  <% end %>
                </td>
                <td>
                  <%= time_tag(comment.created_at) %>
                </td>
                <td>
                  <%= comment.content %>
                </td>
                <td>
                  <a href="#" class="btn btn-warning"><i class="fa fa-pencil"></i></a>
                  <a href="#" class="btn btn-danger"><i class="fa fa-trash-o"></i></a>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
